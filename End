import telebot
from telebot import types

bot = telebot.TeleBot('TOKEN')

# Обработка команды /start
@bot.message_handler(commands=['start'])
def start(message):
    markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
    btn1 = telebot.types.KeyboardButton("Выбрать персонажа")
    markup.add(btn1)
    bot.send_message(message.chat.id, "Здравствуйте,выберите любого персонажа", reply_markup=markup)
#Обработчик нажатия кнопки "Выбрать персонажа"
@bot.message_handler(func=lambda message: message.text == "Выбрать персонажа")
def choose_character(message):
    #Создаём новую клавиатуру с персонажами
    markup = types.ReplyKeyboardMarkup(resize_keyboard=True, row_width=3)# 3 кнопки в ряд
    character = [
        "Хлара", "Лауретта", "Марссель", "Скайлор", 
        "Элиза", "Айзек", "Апполон", 
        "Рамиэль Слепой", "Сора Маэда", "Пурпурный Жнец", "Арабелла",
        "Матриарх Церис", "Сафира Громокрылая", "Гвендолин", "Вордус",
        "Ланс", "Зегерин"
    ]
    # Добавляем кнопки в клавиатуру
    buttons = [types.KeyboardButton(char) for char in character]
    markup.add(*buttons) # * распаковываем список кнопок

    bot.send_message(message.chat.id, "Выбери первого перса:", reply_markup=markup) 
# Обработчик выбора персонажа
@bot.message_handler(func=lambda message: message.text in[
    "Хлара", "Лауретта", "Марссель", "Скайлор", 
        "Элиза", "Айзек",  "Айлос", "Апполон", 
        "Рамиэль Слепой", "Сора Маэда", "Пурпурный Жнец", "Арабелла",
        "Матриарх Церис", "Сафира Громокрылая", "Гвендолин", "Вордус",
        "Ланс", "Зегерин"
])

@bot.message_handler(func=lambda message: message.text in character_info)
def show_character_info(message):
    character_name = message.text
    info = character_info[character_name]

    response = f"{character_name}\n\n{info['description']}"

    if 'photo' in info:
        bot.send_photo(message.chat.id, info['photo'], caption=response)
    else:
        bot.send_message(message.chat.id, response)

